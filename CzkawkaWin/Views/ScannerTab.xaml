<UserControl x:Class="CzkawkaWin.Views.ScannerTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#252525">

    <UserControl.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="OptionLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#ccc"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <Style x:Key="SectionBorder" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!-- Dark Theme Button Style with proper hover states -->
        <Style x:Key="DarkButton" TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="#ddd"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4a4a4a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2a2a2a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#555"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2a2a2a"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333"/>
                                <Setter Property="Foreground" Value="#666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Primary Action Button (blue) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1976D2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#42A5F5"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1976D2"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#444"/>
                                <Setter Property="Foreground" Value="#888"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="DirectoryItem" TargetType="Border">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,2"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*" MinHeight="120"/>
                </Grid.RowDefinitions>

                <!-- DIRECTORIES SECTION -->
                <Border Grid.Row="0" Style="{StaticResource SectionBorder}" Margin="10,10,10,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="DIRECTORIES TO SCAN" Style="{StaticResource SectionHeader}" Margin="0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="+ Add Folder" Click="BtnAddDirectory_Click" 
                                        Style="{StaticResource DarkButton}" Padding="12,6" Margin="2"/>
                                <Button Content="- Remove" Click="BtnRemoveDirectory_Click" 
                                        Style="{StaticResource DarkButton}" Padding="12,6" Margin="2"
                                        x:Name="BtnRemoveDirectory" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                        
                        <ListBox Grid.Row="1" x:Name="DirectoriesList" 
                                 MinHeight="60" MaxHeight="140"
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 SelectionChanged="DirectoriesList_SelectionChanged"
                                 Margin="0,8,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource DirectoryItem}">
                                        <TextBlock Text="{Binding}" 
                                                   Foreground="#ddd" FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding}"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        
                        <TextBlock x:Name="TxtNoDirectories" Grid.Row="1" 
                                   Text="No directories added. Click 'Add Folder' to select directories to scan."
                                   Foreground="#666" FontStyle="Italic" FontSize="11"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Margin="0,20"/>
                    </Grid>
                </Border>

                <!-- SEARCH OPTIONS -->
                <Border Grid.Row="1" Style="{StaticResource SectionBorder}" Margin="10,5">
                    <StackPanel>
                        <TextBlock Text="SEARCH OPTIONS" Style="{StaticResource SectionHeader}"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Method:" 
                                       Style="{StaticResource OptionLabel}" Margin="0,0,15,8"/>
                            <ComboBox Grid.Row="0" Grid.Column="1" x:Name="CmbSearchMethod" 
                                      SelectedIndex="2" Margin="0,0,0,8"
                                      SelectionChanged="CmbSearchMethod_SelectionChanged">
                                <ComboBoxItem Content="Name (Fast, less accurate)"/>
                                <ComboBoxItem Content="Size (Fast, not accurate)"/>
                                <ComboBoxItem Content="Hash (Slow, most accurate)"/>
                            </ComboBox>
                            
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Hash Type:" 
                                       Style="{StaticResource OptionLabel}" Margin="0,0,15,8"
                                       x:Name="TxtHashTypeLabel"/>
                            <ComboBox Grid.Row="0" Grid.Column="4" x:Name="CmbHashType" 
                                      SelectedIndex="0" Margin="0,0,0,8">
                                <ComboBoxItem Content="BLAKE3 (Fast and Secure)"/>
                                <ComboBoxItem Content="CRC32 (Very Fast)"/>
                                <ComboBoxItem Content="XXH3 (Extremely Fast)"/>
                            </ComboBox>
                            
                            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,4">
                                <CheckBox x:Name="ChkRecursive" Content="Search subdirectories" 
                                          IsChecked="True" Foreground="#ccc" Margin="0,0,20,0"/>
                                <CheckBox x:Name="ChkUseCache" Content="Use hash cache" 
                                          IsChecked="True" Foreground="#ccc" Margin="0,0,20,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,8,0,4">
                                <CheckBox x:Name="ChkCaseSensitive" Content="Case-sensitive comparison" 
                                          IsChecked="False" Foreground="#ccc" Margin="0,0,20,0"/>
                                <CheckBox x:Name="ChkAllowHardLinks" Content="Include hard links" 
                                          IsChecked="False" Foreground="#ccc"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- OUTPUT LOG SECTION -->
                <Border Grid.Row="2" Style="{StaticResource SectionBorder}" Margin="10,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="OUTPUT LOG" Style="{StaticResource SectionHeader}" Margin="0"/>
                            
                            <Button Grid.Column="1" Content="Clear Log" Click="BtnClearLog_Click"
                                    Style="{StaticResource DarkButton}" Padding="8,4"/>
                        </Grid>
                        
                        <Border Grid.Row="1" Background="#1e1e1e" CornerRadius="4" Padding="2" MinHeight="100">
                            <ScrollViewer x:Name="LogScrollViewer" VerticalScrollBarVisibility="Auto">
                                <TextBox x:Name="TxtOutputLog" 
                                         IsReadOnly="True" 
                                         TextWrapping="Wrap"
                                         Background="Transparent"
                                         Foreground="#aaa"
                                         BorderThickness="0"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         Padding="8"
                                         AcceptsReturn="True"
                                         Text="Ready to scan. Add directories and click 'Start Scan' to begin."/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>

        <!-- ACTION BUTTONS -->
        <Border Grid.Row="1" Padding="10,5" Background="#2a2a2a">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left: Profile Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Profile:" Foreground="#888" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="CmbProfiles" Width="150" 
                              SelectionChanged="CmbProfiles_SelectionChanged">
                        <ComboBoxItem Content="Default" IsSelected="True"/>
                    </ComboBox>
                    <Button Content="Save" ToolTip="Save current settings as profile" 
                            Click="BtnSaveProfile_Click" Style="{StaticResource DarkButton}" 
                            Padding="8,4" Margin="8,0,0,0"/>
                    <Button Content="Delete" ToolTip="Delete selected profile" 
                            Click="BtnDeleteProfile_Click" Style="{StaticResource DarkButton}"
                            Padding="8,4" Margin="2,0,0,0"
                            x:Name="BtnDeleteProfile" IsEnabled="False"/>
                </StackPanel>
                
                <!-- Center: Main Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnStartScan" Content="Start Scan" 
                            Click="BtnStartScan_Click" 
                            Style="{StaticResource PrimaryButton}"
                            Margin="5"/>
                    <Button x:Name="BtnStopScan" Content="Stop" 
                            Click="BtnStopScan_Click" 
                            Style="{StaticResource DarkButton}"
                            Padding="20,12" FontSize="14"
                            IsEnabled="False" Margin="5"/>
                </StackPanel>
                
                <!-- Right: Czkawka Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtCzkawkaStatus" Text="Czkawka CLI Ready" 
                               Foreground="#4CAF50" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- PROGRESS BAR -->
        <Grid Grid.Row="2" Background="#1a1a1a">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <ProgressBar x:Name="ScanProgressBar" Height="4" 
                         Background="#333" Foreground="#2196F3"
                         IsIndeterminate="False" Value="0"/>
            
            <TextBlock x:Name="TxtScanStatus" Grid.Column="1" 
                       Text="Ready" Padding="12,6" 
                       Foreground="#888" FontSize="11"/>
        </Grid>
    </Grid>
</UserControl>
